{
    "from": 0,
    "query": {
        "bool": {
            "must": [
                {
                    "terms": {
                        "isTemplate": [
                            "n"
                        ]
                    }
                }
            ]
        }
    },
    "aggregations": {
        "resourceType": {
            "terms": {
                "field": "resourceType",
                "size": 10,
                "include": [
                    "dataset",
                    "service",
                    "model"
                ]
            },
            "meta": {
                "field": "resourceType"
            }
        },
        "groupOwner": {
            "terms": {
                "field": "groupOwner",
                "size": 100,
                "include": ".*",
                "order": {
                    "_key": "asc"
                }
            },
            "meta": {
                "orderByTranslation": true,
                "displayFilter": true,
                "filterByTranslation": true,
                "collapsed": true,
                "field": "groupOwner"
            }
        },
        "isHarvested": {
            "terms": {
                "field": "isHarvested",
                "size": 2
            },
            "meta": {
                "userHasRole": "isAdministrator",
                "collapsed": true,
                "field": "isHarvested"
            }
        },
        "tag": {
            "filters": {
                "filters": {
                    "ods": {
                        "query_string": {
                            "query": "+tag.default:opendata.swiss"
                        }
                    },
                    "bgdi": {
                        "query_string": {
                            "query": "tag.default:\"BGDI Bundesgeodaten-Infrastruktur\" OR tag.default:\"IFDG l’Infrastructure Fédérale de données géographiques\" OR tag.default:\"FSDI Federal Spatial Data Infrastructure\" OR tag.default:\"IFDG Infrastruttura federale dei dati geografici\""
                        }
                    },
                    "gdb": {
                        "query_string": {
                            "query": "tag.default:\"Geobasisdaten\"|\"géodonnées de base\"|\"official geodata\"|\"geodati di base\""
                        }
                    }
                }
            }
        },
        "resource": {
            "filters": {
                "filters": {
                    "link": {
                        "query_string": {
                            "query": "linkProtocol:/(WWW:LINK.*|MAP_Preview.*|CHTOPO:specialised-geoportal.*)/"
                        }
                    },
                    "download": {
                        "query_string": {
                            "query": "linkProtocol:/WWW:DOWNLOAD.*/"
                        }
                    },
                    "api": {
                        "query_string": {
                            "query": "linkProtocol:/(OGC:.*|ESRI:REST.*)/"
                        }
                    },
                    "no_resource": {
                        "query_string": {
                            "query": "-_exists_:linkUrl"
                        }
                    }
                }
            }
        }
    },
    "size": 0,
    "track_total_hits": true
}